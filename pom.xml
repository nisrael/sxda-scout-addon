<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.eclipse.scout</groupId>
    <artifactId>maven_rt_plugin_config-master</artifactId>
    <version>23.2.0</version>
    <relativePath/>
  </parent>

  <groupId>io.sxda.scout.addon</groupId>
  <artifactId>base</artifactId>
  <version>23.2.1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <properties>
    <org.eclipse.scout.rt.version>23.2.15</org.eclipse.scout.rt.version>
    <!-- don't mess more than this with the node build system!!! -->
    <!-- hint: var expansion happens late ... -->
    <master_node_dir>${project.basedir}${file.separator}target${file.separator}node</master_node_dir>
    <master_node_modules_dir>
      ${project.basedir}${file.separator}target${file.separator}node${file.separator}node_modules
    </master_node_modules_dir>
    <master_npm_workspace_dir>${project.basedir}</master_npm_workspace_dir>
    <master_webpack_options>--progress=false --clean=false</master_webpack_options>
    <master_karma_output_dir>target/karma-reports</master_karma_output_dir>
    <!-- setup deploy repos -->
    <master_deploy_ReleaseId>github</master_deploy_ReleaseId>
    <master_deploy_ReleaseUrl>https://maven.pkg.github.com/nisrael/sxda-scout-addon</master_deploy_ReleaseUrl>
    <master_deploy_SnapshotId>github</master_deploy_SnapshotId>
    <master_deploy_SnapshotUrl>https://maven.pkg.github.com/nisrael/sxda-scout-addon</master_deploy_SnapshotUrl>
    <sxda.dependency.logback.version>1.4.8</sxda.dependency.logback.version>
    <sxda.plugin.central-publishing-maven-plugin.version>0.2.0</sxda.plugin.central-publishing-maven-plugin.version>
    <sxda.build.package-json-present>false</sxda.build.package-json-present>
    <sxda.build.no-packagge-json-present>true</sxda.build.no-packagge-json-present>
    <!-- default for all modules, will be overwritten in profile sxda-base-module -->
    <sxda.build.base-module>false</sxda.build.base-module>
    <sxda.build.not-base-module>true</sxda.build.not-base-module>
  </properties>

  <distributionManagement>
    <snapshotRepository>
      <id>github</id>
      <url>https://maven.pkg.github.com/nisrael/sxda-scout-addon</url>
    </snapshotRepository>
    <repository>
      <id>ossrh</id>
      <url>https://s01.oss.sonatype.org/service/local/staging/deploy/maven2/</url>
    </repository>
  </distributionManagement>

  <repositories>
    <repository>
      <id>central</id>
      <url>https://repo.maven.apache.org/maven2</url>
    </repository>
    <repository>
      <id>sonatype-oss</id>
      <url>https://oss.sonatype.org/content/repositories/releases</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>central</id>
      <url>https://repo.maven.apache.org/maven2</url>
    </pluginRepository>
    <pluginRepository>
      <id>sonatype-oss</id>
      <url>https://oss.sonatype.org/content/repositories/releases</url>
    </pluginRepository>
  </pluginRepositories>

  <mailingLists/>

  <scm>
    <connection>scm:git:ssh://git@github.com/nisrael/sxda-scout-addon.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/nisrael/sxda-scout-addon.git</developerConnection>
    <url>https://github.com/nisrael/sxda-scout-addon</url>
    <tag>HEAD</tag>
  </scm>

  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/nisrael/sxda-scout-addon/issues</url>
  </issueManagement>

  <licenses>
    <license>
      <name>Eclipse Public License 2.0</name>
      <url>https://www.eclipse.org/legal/epl-2.0/</url>
