<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.eclipse.scout</groupId>
    <artifactId>maven_rt_plugin_config-master</artifactId>
    <version>23.2.0</version>
    <relativePath/>
  </parent>

  <groupId>io.sxda.scout.addon</groupId>
  <artifactId>base</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <properties>
    <org.eclipse.scout.rt.version>[23.2.13,24.0.0)</org.eclipse.scout.rt.version>
    <logback.version>1.4.8</logback.version>
    <!-- don't mess more than this with the node build system!!! -->
    <!-- hint: var expansion happens late ... -->
    <master_node_dir>${project.basedir}${file.separator}target${file.separator}node</master_node_dir>
    <master_node_modules_dir>
      ${project.basedir}${file.separator}target${file.separator}node${file.separator}node_modules
    </master_node_modules_dir>
    <master_npm_workspace_dir>${project.basedir}</master_npm_workspace_dir>
    <master_webpack_options>--progress=false --clean=false</master_webpack_options>
    <master_karma_output_dir>target/karma-reports</master_karma_output_dir>
    <!-- setup deploy repos -->
    <master_deploy_ReleaseId>github</master_deploy_ReleaseId>
    <master_deploy_ReleaseUrl>https://maven.pkg.github.com/nisrael/sxda-scout-addon</master_deploy_ReleaseUrl>
    <master_deploy_SnapshotId>github</master_deploy_SnapshotId>
    <master_deploy_SnapshotUrl>https://maven.pkg.github.com/nisrael/sxda-scout-addon</master_deploy_SnapshotUrl>
  </properties>

  <distributionManagement>
    <snapshotRepository>
      <id>ossrh</id>
      <url>https://s01.oss.sonatype.org/content/repositories/snapshots</url>
    </snapshotRepository>
    <repository>
      <id>ossrh</id>
      <url>https://s01.oss.sonatype.org/service/local/staging/deploy/maven2/</url>
    </repository>
  </distributionManagement>

  <repositories>
    <repository>
      <id>central</id>
      <url>https://repo.maven.apache.org/maven2</url>
    </repository>
    <repository>
      <id>sonatype-oss</id>
      <url>https://oss.sonatype.org/content/repositories/releases</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>central</id>
      <url>https://repo.maven.apache.org/maven2</url>
    </pluginRepository>
    <pluginRepository>
      <id>sonatype-oss</id>
      <url>https://oss.sonatype.org/content/repositories/releases</url>
    </pluginRepository>
  </pluginRepositories>

  <mailingLists/>

  <scm>
    <connection>scm:git:https://github.com/nisrael/sxda-scout-addon.git</connection>
    <developerConnection>scm:git:https://github.com/nisrael/sxda-scout-addon.git</developerConnection>
    <url>https://github.com/nisrael/sxda-scout-addon</url>
  </scm>

  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/nisrael/sxda-scout-addon/issues</url>
  </issueManagement>

  <licenses>
    <license>
      <name>Eclipse Public License 2.0</name>
      <url>https://www.eclipse.org/legal/epl-2.0/</url>
      <comments>
        This program and the accompanying materials are made
        available under the terms of the Eclipse Public License 2.0
        which is available at https://www.eclipse.org/legal/epl-2.0/
      </comments>
    </license>
  </licenses>

  <developers>
    <developer>
      <name>Nils Israel</name>
      <email>nils@sxda.io</email>
    </developer>
    <developer>
      <name>sxda.io release-bot</name>
      <email>release-bot@sxda.io</email>
    </developer>

  </developers>

  <modules>
    <module>build</module>
  </modules>

  <profiles>
    <profile>
      <id>sxda-release</id>
      <properties>
        <gpg.keyname>release-bot@sxda.io</gpg.keyname>
        <version.maven-release-plugin>3.0.0-M7</version.maven-release-plugin>
        <version.maven-gpg-plugin>3.0.1</version.maven-gpg-plugin>
        <version.nexus-staging-maven-plugin>1.6.13</version.nexus-staging-maven-plugin>
      </properties>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <artifactId>maven-release-plugin</artifactId>
              <version>${version.maven-release-plugin}</version>
              <configuration>
                <tagNameFormat>v@{project.version}</tagNameFormat>
                <dryRun>true</dryRun>
                <autoVersionSubmodules>true</autoVersionSubmodules>
              </configuration>
              <executions>
                <execution>
                  <id>default</id>
                  <goals>
                    <goal>prepare</goal>
                  </goals>
                  <configuration>
                    <!-- prepare the node modules for the release, too -->
                    <releaseProfiles>npm-version-release, npm-version-release-dependencies</releaseProfiles>
                  </configuration>
                </execution>
              </executions>
            </plugin>
            <!-- The key's name & passphrase are configured via GitHub's setup-java action. -->
            <plugin>
              <artifactId>maven-gpg-plugin</artifactId>
              <version>${version.maven-gpg-plugin}</version>
              <executions>
                <execution>
                  <id>sign-artifacts</id>
                  <phase>verify</phase>
                  <goals>
                    <goal>sign</goal>
                  </goals>
                  <configuration>
                    <!-- This is required to make sure the plugin does not stop asking for -->
                    <!-- user input on the passphrase -->
                    <gpgArguments>
                      <arg>--pinentry-mode</arg>
                      <arg>loopback</arg>
                    </gpgArguments>
                  </configuration>
                </execution>
              </executions>
            </plugin>
            <plugin>
              <groupId>org.sonatype.plugins</groupId>
              <artifactId>nexus-staging-maven-plugin</artifactId>
              <version>${version.nexus-staging-maven-plugin}</version>
              <extensions>true</extensions>
              <configuration>
                <serverId>ossrh</serverId>
                <!-- See https://central.sonatype.org/publish/release/#login-into-ossrh for details -->
                <nexusUrl>https://s01.oss.sonatype.org</nexusUrl>
                <autoReleaseAfterClose>true</autoReleaseAfterClose>
                <skipNexusStagingDeployMojo>true</skipNexusStagingDeployMojo>
              </configuration>
            </plugin>
          </plugins>
        </pluginManagement>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
          </plugin>
          <plugin>
            <groupId>org.sonatype.plugins</groupId>
            <artifactId>nexus-staging-maven-plugin</artifactId>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>io.sxda.scout.addon</groupId>
        <artifactId>build</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>io.sxda.scout.addon</groupId>
        <artifactId>ace</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>io.sxda.scout.addon</groupId>
        <artifactId>ace.client</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>io.sxda.scout.addon</groupId>
        <artifactId>ace.ui.html</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.eclipse.scout.rt</groupId>
        <artifactId>org.eclipse.scout.rt.client</artifactId>
        <version>${org.eclipse.scout.rt.version}</version>
      </dependency>
      <dependency>
        <groupId>org.eclipse.scout.rt</groupId>
        <artifactId>org.eclipse.scout.rt.ui.html</artifactId>
        <version>${org.eclipse.scout.rt.version}</version>
      </dependency>
      <dependency>
        <groupId>org.eclipse.scout.rt</groupId>
        <artifactId>eclipse-scout-core</artifactId>
        <version>${org.eclipse.scout.rt.version}</version>
      </dependency>
      <dependency>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.1.0</version>
      </dependency>
      <dependency>
        <groupId>ch.qos.logback</groupId>
        <artifactId>logback-classic</artifactId>
        <version>${logback.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
</project>
