<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.eclipse.scout</groupId>
    <artifactId>maven_rt_plugin_config-master</artifactId>
    <version>23.2.0</version>
    <relativePath/>
  </parent>

  <groupId>io.sxda.scout.addon</groupId>
  <artifactId>base</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <properties>
    <org.eclipse.scout.rt.version>[23.2.13,24.0.0)</org.eclipse.scout.rt.version>
    <logback.version>1.4.8</logback.version>
    <!-- don't mess more than this with the node build system!!! -->
    <!-- hint: var expansion happens late ... -->
    <master_node_dir>${project.basedir}${file.separator}target${file.separator}node</master_node_dir>
    <master_node_modules_dir>
      ${project.basedir}${file.separator}target${file.separator}node${file.separator}node_modules
    </master_node_modules_dir>
    <master_npm_workspace_dir>${project.basedir}</master_npm_workspace_dir>
    <master_webpack_options>--progress=false --clean=false</master_webpack_options>
    <master_karma_output_dir>target/karma-reports</master_karma_output_dir>
    <!-- setup deploy repos -->
    <master_deploy_ReleaseId>github</master_deploy_ReleaseId>
    <master_deploy_ReleaseUrl>https://maven.pkg.github.com/nisrael/sxda-scout-addon</master_deploy_ReleaseUrl>
    <master_deploy_SnapshotId>github</master_deploy_SnapshotId>
    <master_deploy_SnapshotUrl>https://maven.pkg.github.com/nisrael/sxda-scout-addon</master_deploy_SnapshotUrl>
  </properties>

  <distributionManagement>
    <repository>
      <id>github</id>
      <name>GitHub nisrael Apache Maven Packages</name>
      <url>https://maven.pkg.github.com/nisrael/sxda-scout-addon</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </distributionManagement>

  <repositories>
    <repository>
      <id>github</id>
      <url>https://maven.pkg.github.com/nisrael/sxda-scout-addon</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <mailingLists/>

  <scm>
    <url>https://github.com/nisrael/sxda-scout-addon.git/</url>
  </scm>

  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/nisrael/sxda-scout-addon/issues</url>
  </issueManagement>

  <developers>
    <developer>
      <name>Nils Israel</name>
      <email>nils@sxda.io</email>
    </developer>
  </developers>

  <modules>
    <module>build</module>
  </modules>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>io.sxda.scout.addon</groupId>
        <artifactId>build</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>io.sxda.scout.addon</groupId>
        <artifactId>ace</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>io.sxda.scout.addon</groupId>
        <artifactId>ace.client</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>io.sxda.scout.addon</groupId>
        <artifactId>ace.ui.html</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>org.eclipse.scout.rt</groupId>
        <artifactId>org.eclipse.scout.rt.client</artifactId>
        <version>${org.eclipse.scout.rt.version}</version>
      </dependency>
      <dependency>
        <groupId>org.eclipse.scout.rt</groupId>
        <artifactId>org.eclipse.scout.rt.ui.html</artifactId>
        <version>${org.eclipse.scout.rt.version}</version>
      </dependency>
      <dependency>
        <groupId>org.eclipse.scout.rt</groupId>
        <artifactId>eclipse-scout-core</artifactId>
        <version>${org.eclipse.scout.rt.version}</version>
      </dependency>
      <dependency>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.1.0</version>
      </dependency>
      <dependency>
        <groupId>ch.qos.logback</groupId>
        <artifactId>logback-classic</artifactId>
        <version>${logback.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
</project>
