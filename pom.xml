      <email>release-bot@sxda.io</email>
    </developer>

  </developers>

  <modules>
    <module>build</module>
  </modules>

  <profiles>
    <profile>
      <id>sxda-release</id>
      <properties>
        <gpg.keyname>release-bot@sxda.io</gpg.keyname>
        <master_skip_npm_version_snapshot_dependencies>true</master_skip_npm_version_snapshot_dependencies>
        <master_skip_npm_version_snapshot>true</master_skip_npm_version_snapshot>
      </properties>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <artifactId>maven-release-plugin</artifactId>
              <version>${master_plugin_release_version}</version>
              <configuration>
                <autoVersionSubmodules>true</autoVersionSubmodules>
                <!-- we are using the major and minor version of the eclipse scout release and increase the patch
                     version for the subsequent addon releases -->
                <projectVersionPolicyId>default</projectVersionPolicyId>
                <tagNameFormat>v@{project.version}</tagNameFormat>
                <releaseProfiles>sxda-release</releaseProfiles>
                <scmCommentPrefix>[ci skip]</scmCommentPrefix>
                <preparationGoals>
                  clean
                  exec:exec@sxda-npm-install
                  exec:exec@sxda-npm-release-dependencies
                  exec:exec@sxda-npm-release-version
                  exec:exec@sxda-npm-scm-add-package-json verify
                </preparationGoals>
                <!-- it is correct first setting release version, because actually it sets the package.json version
                     to the pom version, which at this stage is already the new snapshot version but with uppercase
                     SNAPSHOT, calling snapshot-version afterward fixes this and appends a timestamp -->
                <completionGoals>
                  install
                  exec:exec@sxda-npm-install
                  exec:exec@sxda-npm-release-version
                  exec:exec@sxda-npm-snapshot-version
                  exec:exec@sxda-npm-snapshot-dependencies
                  exec:exec@sxda-npm-scm-add-package-json
                </completionGoals>
                <pushChanges>true</pushChanges>
              </configuration>
            </plugin>
            <!-- The key's name & passphrase are configured via GitHub's setup-java action. -->
            <plugin>
              <artifactId>maven-gpg-plugin</artifactId>
              <version>${master_plugin_gpg_version}</version>
              <executions>
                <execution>
                  <id>sign-artifacts</id>
                  <phase>verify</phase>
                  <goals>
                    <goal>sign</goal>
                  </goals>
                  <configuration>
                    <!-- This is required to make sure the plugin does not stop asking for -->
                    <!-- user input on the passphrase -->
                    <gpgArguments>
                      <arg>--pinentry-mode</arg>
                      <arg>loopback</arg>
                    </gpgArguments>
                  </configuration>
                </execution>
              </executions>
            </plugin>
            <plugin>
              <groupId>org.sonatype.central</groupId>
              <artifactId>central-publishing-maven-plugin</artifactId>
              <version>${sxda.plugin.central-publishing-maven-plugin.version}</version>
              <extensions>true</extensions>
              <configuration>
                <publishingServerId>central</publishingServerId>
                <tokenEnabled>true</tokenEnabled>
              </configuration>
            </plugin>
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-source-plugin</artifactId>
              <version>${master_plugin_source_version}</version>
              <executions>
                <execution>
                  <id>attach-sources</id>
                  <goals>
                    <goal>jar-no-fork</goal>
                  </goals>
                </execution>
              </executions>
            </plugin>
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-javadoc-plugin</artifactId>
              <version>${master_plugin_javadoc_version}</version>
              <executions>
                <execution>
                  <id>attach-javadocs</id>
                  <goals>
                    <goal>jar</goal>
                  </goals>
                </execution>
              </executions>
            </plugin>
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-surefire-plugin</artifactId>
              <version>${master_plugin_surefire_version}</version>
            </plugin>
            <plugin>
              <groupId>org.codehaus.mojo</groupId>
              <artifactId>exec-maven-plugin</artifactId>
              <version>${master_plugin_exec_version}</version>
              <executions>
                <execution>
                  <id>sxda-npm-install</id>
                  <goals>
                    <goal>exec</goal>
                  </goals>
                  <configuration>
                    <skip>${sxda.build.no-packagge-json-present}</skip>
                    <executable>pnpm</executable>
                    <arguments>
                      <argument>install</argument>
                    </arguments>
                  </configuration>
                </execution>
                <execution>
                  <id>sxda-npm-release-dependencies</id>
                  <goals>
                    <goal>exec</goal>
                  </goals>
                  <configuration>
                    <skip>${sxda.build.no-packagge-json-present}</skip>
                    <executable>npm</executable>
                    <arguments>
                      <argument>run</argument>
                      <argument>version:release:dependencies</argument>
                    </arguments>
                  </configuration>
                </execution>
                <execution>
                  <id>sxda-npm-release-version</id>
                  <goals>
                    <goal>exec</goal>
                  </goals>
                  <configuration>
                    <skip>${sxda.build.no-packagge-json-present}</skip>
                    <executable>npm</executable>
                    <arguments>
                      <argument>run</argument>
                      <argument>version:release</argument>
                      <argument>--</argument>
                      <argument>--newVersion=${project.version}</argument>
                    </arguments>
                  </configuration>
                </execution>
                <execution>
                  <id>sxda-npm-snapshot-version</id>
                  <goals>
                    <goal>exec</goal>
                  </goals>
                  <configuration>
                    <skip>${sxda.build.no-packagge-json-present}</skip>
                    <executable>npm</executable>
                    <arguments>
                      <argument>run</argument>
                      <argument>version:snapshot</argument>
                    </arguments>
                  </configuration>
                </execution>
                <execution>
                  <id>sxda-npm-snapshot-dependencies</id>
                  <goals>
                    <goal>exec</goal>
                  </goals>
                  <configuration>
                    <skip>${sxda.build.no-packagge-json-present}</skip>
                    <executable>npm</executable>
                    <arguments>
                      <argument>run</argument>
                      <argument>version:snapshot:dependencies</argument>
                    </arguments>
                  </configuration>
                </execution>
                <execution>
                  <id>sxda-npm-scm-add-package-json</id>
                  <goals>
                    <goal>exec</goal>
                  </goals>
                  <configuration>
                    <skip>${sxda.build.no-packagge-json-present}</skip>
                    <executable>git</executable>
                    <arguments>
                      <argument>add</argument>
                      <argument>${basedir}/package.json</argument>
                    </arguments>
                  </configuration>
                </execution>
                <execution>
                  <id>sxda-npm-publish</id>
                  <goals>
                    <goal>exec</goal>
                  </goals>
                  <phase>deploy</phase>
                  <configuration>
                    <skip>${sxda.build.no-packagge-json-present}</skip>
                    <executable>npm</executable>
                    <arguments>
                      <argument>publish</argument>
                      <argument>--access</argument>
                      <argument>public</argument>
                    </arguments>
                  </configuration>
                </execution>
              </executions>
            </plugin>
          </plugins>
        </pluginManagement>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-release-plugin</artifactId>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
          </plugin>
          <plugin>
            <groupId>org.sonatype.central</groupId>
            <artifactId>central-publishing-maven-plugin</artifactId>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-source-plugin</artifactId>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-javadoc-plugin</artifactId>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>sxda-npm-module</id>
      <activation>
        <file>
          <exists>${basedir}/package.json</exists>
        </file>
      </activation>
      <properties>
        <sxda.build.package-json-present>true</sxda.build.package-json-present>
        <sxda.build.no-packagge-json-present>false</sxda.build.no-packagge-json-present>
      </properties>
    </profile>
    <profile>
      <id>sxda-base-module</id>
      <activation>
        <file>
          <exists>${basedir}/license_files/copyright.txt</exists>
        </file>
      </activation>
      <properties>
        <sxda.build.base-module>true</sxda.build.base-module>
        <sxda.build.not-base-module>false</sxda.build.not-base-module>
        <maven.build.timestamp.format>yyyy</maven.build.timestamp.format>
      </properties>
    </profile>
    <profile>
      <id>sxda-license-validation</id>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>com.mycila</groupId>
              <artifactId>license-maven-plugin</artifactId>
              <version>${master_plugin_license_version}</version>
              <!-- the configuration of the parent pom is broken -->
              <configuration combine.self="override">
                <properties>
                  <current.year>${maven.build.timestamp}</current.year>
                </properties>
                <failIfMissing>true</failIfMissing>
                <strictCheck>true</strictCheck>
                <aggregate>true</aggregate>
                <!-- skipped for all modules except the base module, hence: aggregate=true -->
                <skip>${sxda.build.not-base-module}</skip>
                <mapping>
                  <java>SCOUT_JAVADOC_STYLE</java>
                  <js>SCOUT_JAVADOC_STYLE</js>
                  <ts>SCOUT_JAVADOC_STYLE</ts>
                  <less>SCOUT_JAVADOC_STYLE</less>
                  <css>SCOUT_JAVADOC_STYLE</css>
                </mapping>
                <licenseSets>
                  <licenseSet>
                    <header>${project.basedir}/license_files/copyright.txt</header>
                    <headerDefinitions>
                      <headerDefinition>${project.basedir}/license_files/scoutLicenceHeaderJava.xml
                      </headerDefinition>
                    </headerDefinitions>
                    <useDefaultExcludes>false</useDefaultExcludes>
                    <includes>
                      <include>**/pom.xml</include>
                      <include>**/*.properties</include>
                      <include>**/*.java</include>
                      <include>**/*.js</include>
                      <include>**/*.ts</include>
                      <include>**/*.css</include>
                      <include>**/*.less</include>
                      <include>**/*.xml</include>
                      <include>**/*.xsd</include>
                    </includes>
                    <excludes>
                      <exclude>.idea/**</exclude>
                      <exclude>**/license_files/**</exclude>
                      <exclude>**/target/**</exclude>
                      <exclude>**/node_modules/**</exclude>
                      <exclude>**/test-results/**</exclude>
                      <exclude>**/dist/**</exclude>
                      <exclude>**/.*</exclude>
                      <exclude>**/.settings/**</exclude>
                      <exclude>**/release.properties</exclude>
                      <exclude>**/pom.xml.releaseBackup</exclude>
                      <exclude>**/*.sh</exclude>
                      <exclude>**/src/main/resources/WebContent/**</exclude>
                      <exclude>**/src/main/ws-stub/**</exclude>
                    </excludes>
                  </licenseSet>
                </licenseSets>

              </configuration>
              <executions>
                <execution>
                  <id>check-license-headers</id>
                  <goals>
                    <goal>check</goal>
                  </goals>
                  <phase>validate</phase>
                </execution>
              </executions>
              <dependencies>
                <dependency>
                  <groupId>com.mycila</groupId>
                  <artifactId>license-maven-plugin-git</artifactId>
                  <!-- make sure you use the same version as license-maven-plugin -->
                  <version>${master_plugin_license_version}</version>
                </dependency>
              </dependencies>
            </plugin>
          </plugins>
        </pluginManagement>
        <plugins>
          <plugin>
            <groupId>com.mycila</groupId>
            <artifactId>license-maven-plugin</artifactId>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
