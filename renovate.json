{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "UTC",
  "schedule": [
    "before 6am on Monday"
  ],
  "prConcurrentLimit": 3,
  "assignees": [
    "nisrael"
  ],
  "reviewers": [
    "nisrael"
  ],
  "labels": [
    "dependencies"
  ],
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore",
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  "rangeStrategy": "update-lockfile",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 6am on Monday"
    ]
  },
  "packageRules": [
    {
      "description": "GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "github-actions"
      ],
      "groupName": "GitHub Actions"
    },
    {
      "description": "Eclipse Scout Maven dependencies - patch only",
      "matchManagers": [
        "maven"
      ],
      "addLabels": [
        "maven"
      ],
      "groupName": "eclipse-scout",
      "matchUpdateTypes": [
        "patch"
      ],
      "matchPackageNames": [
        "/^org\\.eclipse\\.scout\\.rt:/"
      ]
    },
    {
      "description": "Exclude jandex-maven-plugin - must match Eclipse Scout version",
      "matchManagers": [
        "maven"
      ],
      "matchPackageNames": [
        "io.smallrye:jandex-maven-plugin"
      ],
      "enabled": false
    },
    {
      "description": "Maven plugins - minor and patch",
      "matchManagers": [
        "maven"
      ],
      "addLabels": [
        "maven"
      ],
      "groupName": "maven-plugins",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "/^org\\.apache\\.maven\\.plugins:/",
        "/^org\\.codehaus\\.mojo:/",
        "/^io\\.smallrye:/",
        "/^com\\.mycila:/",
        "/^org\\.sonatype\\.central:/",
        "!io.smallrye:jandex-maven-plugin"
      ]
    },
    {
      "description": "Other Maven dependencies - minor and patch",
      "matchManagers": [
        "maven"
      ],
      "addLabels": [
        "maven"
      ],
      "groupName": "other-dependencies",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "!/^org\\.eclipse\\.scout\\.rt:/",
        "!/^org\\.apache\\.maven\\.plugins:/",
        "!/^org\\.codehaus\\.mojo:/",
        "!/^io\\.smallrye:/",
        "!/^com\\.mycila:/",
        "!/^org\\.sonatype\\.central:/"
      ]
    },
    {
      "description": "Eclipse Scout npm dependencies - patch only",
      "matchManagers": [
        "npm"
      ],
      "groupName": "eclipse-scout-npm",
      "matchUpdateTypes": [
        "patch"
      ],
      "matchPackageNames": [
        "/^@eclipse-scout//"
      ]
    },
    {
      "description": "Ace editor - minor and patch",
      "matchManagers": [
        "npm"
      ],
      "matchFileNames": [
        "ace/**",
        "demo/**"
      ],
      "matchPackageNames": [
        "ace-code"
      ],
      "addLabels": [
        "ace"
      ],
      "groupName": "ace",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "description": "CodeMirror packages - minor and patch",
      "matchManagers": [
        "npm"
      ],
      "matchFileNames": [
        "codemirror/**",
        "demo/**"
      ],
      "addLabels": [
        "codemirror"
      ],
      "groupName": "codemirror",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "/^@codemirror//",
        "/^thememirror$/",
        "/^@ddietr/codemirror-themes$/"
      ]
    },
    {
      "description": "Development dependencies for ace module",
      "matchManagers": [
        "npm"
      ],
      "matchFileNames": [
        "ace/**"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "addLabels": [
        "npm",
        "ace"
      ],
      "groupName": "ace development",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "!/^@eclipse-scout//",
        "!/^ace-code$/"
      ]
    },
    {
      "description": "Development dependencies for codemirror module",
      "matchManagers": [
        "npm"
      ],
      "matchFileNames": [
        "codemirror/**"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "addLabels": [
        "npm",
        "codemirror"
      ],
      "groupName": "codemirror development",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "!/^@eclipse-scout//",
        "!/^@codemirror//",
        "!/^thememirror$/",
        "!/^@ddietr/codemirror-themes$/"
      ]
    },
    {
      "description": "Development dependencies for demo module",
      "matchManagers": [
        "npm"
      ],
      "matchFileNames": [
        "demo/**"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "addLabels": [
        "npm",
        "demo"
      ],
      "groupName": "demo development",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "!/^@eclipse-scout//",
        "!/^@codemirror//",
        "!/^thememirror$/",
        "!/^@ddietr/codemirror-themes$/",
        "!/^ace-code$/"
      ]
    }
  ]
}
